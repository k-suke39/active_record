<% breadcrumb :root, class: "font-bold"%>
<section class="text-gray-600 body-font mb-50">
  <div class="container px-5 mx-auto pt-10">
    <div class="flex flex-col text-center w-full mb-20">
      <h2 class="text-xs text-color-primary tracking-widest font-bold title-font mb-1">LESSON</h2>
      <h1 class="sm:text-3xl text-2xl title-font text-gray-900 font-bold">レッスン一覧</h1>
    </div>
    <div class="flex flex-wrap -m-4">
      <% @lessons.each do |lesson|%>
      <div class="p-4 md:w-1/3">
       <% if lesson.id == 1 %>
        <div class="flex rounded-lg h-full bg-gray-100 p-8 flex-col">
          <div class="flex items-center mb-3">
        
            <div class="w-8 h-8 mr-3 inline-flex items-center justify-center rounded-full bg-color-primary text-white flex-shrink-0">
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
              </svg>
            </div>
            <h2 class="text-gray-900 text-lg title-font font-bold"><%= lesson.lesson_type %></h2>
          </div>
          <div class="flex-grow">
            <p class="leading-relaxed text-base"><%= lesson.description %></p>
         <%= link_to chapter_path(lesson), class: "mt-3 text-color-primary inline-flex items-center font-bold" do %>
         問題を解いてみる
         <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
          <path d="M5 12h14M12 5l7 7-7 7"></path>
         </svg>
         <% end %>
          </div>
        </div>
       <% else%> 
         <div class="flex rounded-lg h-full bg-gray-400 p-8 flex-col">
          <div class="flex items-center mb-3">
        
            <div class="w-8 h-8 mr-3 inline-flex items-center justify-center rounded-full bg-color-primary text-white flex-shrink-0">
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
              </svg>
            </div>
            <h2 class="text-white text-lg title-font font-bold"><%= lesson.lesson_type %></h2>
          </div>
          <div class="flex-grow">
            <p class=" text-white leading-relaxed text-base font-bold"><%= lesson.description %></p>
          </div>
        </div>
       <% end %>
      </div>
      <% end %>
    </div>
  </div>
</section>
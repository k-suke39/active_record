<header class="text-gray-600 body-font">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
      <span class="text-3xl font-bold">Active Recorder</span>
    </a>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
    </nav>
    <% if logged_in? %>
       <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete}, class: "inline-flex items-center bg-color-primary text-white py-3 px-8 rounded-full hover:shadow-lg hover:opacity-80 transition duration-300 ease-in-out"%>
    <% else %>
      <%= button_to "/auth/github", method: :post, data: {turbo: "false"}, class: "inline-flex items-center bg-color-primary text-white py-3 px-8 rounded-full hover:shadow-lg hover:opacity-80 transition duration-300 ease-in-out" do %>
        <%= content_tag :i, "", class: "fa-brands fa-github fa-fw" %>
        <%= content_tag :p, "GitHub" %>
      <% end %>
    <% end %>
  </div>
</header>
<% if flash.notice%>
  <%= flash.notice%>
<% end %>